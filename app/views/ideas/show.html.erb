<div class="box" style="text-align:center;">
    <h1><span style="font-size:46px;"><%= fa_icon('lightbulb-o') %></span><span style="vertical-align: text-top;">&nbsp;&nbsp;&nbsp;<%= @idea.title %></span></h1>
    <%= link_to "Entre em contato com o autor #{fa_icon('comments-o')}".html_safe, '#', style: 'color:#000;', data: {toggle: "modal", target:"#myModal"} %><br />
    <small>Tags: <%= raw @idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></small>
</div>
<div class="box about">
	<%= simple_format(@idea.description) %>
</div>

<div class="disqus col-md-6 col-md-offset-3">
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'agregadordeideiascom'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>    
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Informações de contato</h4>
      </div>
      <div class="modal-body">
      <table>
        <thead>
          <tr>
              <th style="width: 130px;"><%= fa_icon('twitter')%>&nbsp;Twitter:</th>
              <th style="width: 150px;"><%= fa_icon('facebook')%>&nbsp;Facebook:</th>
              <th style="width: 200px;"><%= fa_icon('send-o')%>&nbsp; Email:</th>
              <th style="width: 100px;"><%= fa_icon('phone')%>&nbsp; Telefone:</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th style="width: 130px;"><%= @idea.twitter %></th>
            <th style="width: 150px;"><%= @idea.facebook %></th>
            <th style="width: 200px;"><%= @idea.email %></th>
            <th style="width: 100px;"><%= @idea.telefone %></th>
          </tr>
        </tbody>
      </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>